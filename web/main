					$("#secValues .content-wrap .img-wrap").addClass('animated fadeInDown').css('animation-delay', '1s');
					$("#secValues .content-wrap .btn").addClass('animated fadeInDown').css('animation-delay', '1.2s');

					swiperMain.autoplay.stop();

				}

				if (index == 2 && direction == 'up') {
					$('#header').removeClass('fixed');
					$('body').removeClass('is-fixed-header');

					swiperMain.autoplay.start();
				}

				if (index == 2 && direction == 'down') {
					//animate
