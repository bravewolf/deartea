		//swiperMain
		var swiperMain = new Swiper('#mainGallery', {
			parallax: true,
			speed:1000,
			spaceBetween: 0,
			//zoom: true,
			effect: 'fade',
			fadeEffect: {
				crossFade: true
			},
			keyboard:
			{
				enabled: true,
				onlyInViewport: false,
			},
			autoplay:
			{
				delay: 7000,//delay 변경 시, #mainGallery .swiper-pagination-bullet-active::after 애니메이션 속도 변경 필요
				disableOnInteraction: false
			},
			loop: true,
			slidesPerView: 1,
			pagination: {
				el: '#mainGallery .swiper-pagination',
				clickable: true
			},
			centeredSlides: true,
			breakpoints: {
				750: {
					spaceBetween: 0,
				},
				1024: {
					spaceBetween: 0,
				}
			},
			on : {
				slideChange: function() {
					var swiper = this,
						defaultSlideDelay = swiper.params.autoplay.delay,
						activeIndex = swiper.activeIndex,
						activeSlide = swiper.slides[activeIndex];

					//animate remove
					$("#mainGallery .bg-area").removeClass('animated fadeIn');
					$("#mainGallery .text-label").removeClass('animated fadeInUp');
					$("#mainGallery .section-title").removeClass('animated fadeInUp');
					$("#mainGallery .btn").removeClass('animated fadeInUp');

					const currentBg = $(activeSlide).find('.bg-area'),
						currentLabel = $(activeSlide).find('.text-label'),
						currentTitle = $(activeSlide).find('.section-title'),
						currentBtn = $(activeSlide).find('.btn');
					$(currentBg).addClass('animated fadeIn');
					$(currentLabel).addClass('animated fadeInUp');
					$(currentTitle).addClass('animated fadeInUp');
					$(currentBtn).addClass('animated fadeInUp');
				}
			}
		});
		swiperMain.init();

		//controller Posi
		var lastDotP, lastDotW, lastDotM;
		function controllerPosi() {
			const lastDotP = $('#mainGallery .swiper-pagination-bullet:last-child').position().left,
				lastDotW = $('#mainGallery .swiper-pagination-bullet:last-child').width(),
				lastDotM = parseInt($('#mainGallery .swiper-pagination-bullet:last-child').css("marginLeft").replace('px', '')),
				mainSwBtn = lastDotP + lastDotW + lastDotM;

			$('#mainGallery .controller').css({
				'left' : mainSwBtn
			});
		}

		//console.log(swiperMain.slides.length);
		if (swiperMain.slides.length > 2) {/* loop ture 3, false 2 */
			$('#mainGallery').addClass('has-controller');
			controllerPosi();
		} else {
			$('#mainGallery').removeClass('has-controller');
		}

		//mainGallery Play & Stop
		$('#mainGallery .btn.play').on('click',function (e) {
			swiperMain.autoplay.start();

			//bullet progress
			$('#mainGallery').removeClass('swiper-paused');
		});
		$('#mainGallery .btn.stop').on('click',function (e) {
			swiperMain.autoplay.stop();

			//bullet progress
			$('#mainGallery').addClass('swiper-paused');
		});

